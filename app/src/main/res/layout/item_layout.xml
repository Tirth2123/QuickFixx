<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="8dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/Picture"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorMainBtn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wroker_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Provider Name"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wroker_Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rate"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="3.5"
                    android:textColor="@color/colorPrimaryDark" />
                <TextView
                    android:id="@+id/wroker_Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="114 Rating"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/who"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/wroker_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorPrimaryDark"
                android:text="Sevasi Road, Vadodara"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buttonCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0000000000"
                    android:background="@drawable/rate"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginEnd="5dp"
                    app:drawableLeftCompat="@drawable/baseline_phone_enabled_24" />

                <TextView
                    android:id="@+id/buttonChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chat"
                    android:background="@drawable/rate"
                    android:drawableLeft="@drawable/icons8_whatsapp_24"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/buttonDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="See Details"
                    android:background="@drawable/rate"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>