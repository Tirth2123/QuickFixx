<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Plumbing Worker"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/vendor_Star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/rate"/>

            <TextView
                android:id="@+id/vendor_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="114 Rating"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/vendor_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="10dp"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/vendor_Address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Sevasi Road, Vadodara"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/vendor_exp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="10 Yrs Exp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/vendor_buttonEnquiry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0000000000"
                android:background="@drawable/rate"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="5dp"
                app:drawableLeftCompat="@drawable/baseline_phone_enabled_24" />

            <TextView
                android:id="@+id/vendor_buttonChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Chat"
                android:background="@drawable/rate"
                android:drawableLeft="@drawable/icons8_whatsapp_24"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/vendor_reviews_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Reviews &amp; Ratings"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vendor_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="@drawable/rate"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/vendor_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="11 Ratings"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"/>

            <RatingBar
                android:id="@+id/vendor_review_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:numStars="5"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vendor_reviews_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
